<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:background="@color/blue_light"
        android:layout_height="150dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="游戏" />

    </RelativeLayout>

    <com.kugou.demo.iplay.pagerslidingtabstrip.PagerSlidingTabStrip
        android:id="@+id/psts"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:textColor="@color/black"
        android:visibility="visible"
        android:background="@color/blue"
        android:textSize="16sp"
        app:pstsIndicatorColor="@color/green"
        app:pstsUnderlineColor="@color/colorAccent"
        app:pstsDividerColor="@color/transparent"
        app:pstsTextSelectColor="@color/green"
        app:pstsIndicatorHeight="5dp"
        app:pstsUnderlineHeight="0dp"
        app:pstsDividerPadding="5dp"
        app:pstsTabPaddingLeftRight="10dp"
        app:pstsScrollOffset="6dp"
        app:pstsTabBackground="@color/transparent"
        app:pstsShouldExpand="true"
        app:pstsTextAllCaps="false" />

    <android.support.v4.view.ViewPager
        android:id="@+id/viewpager"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:visibility="visible"
        android:layout_weight="1" />

    <com.kugou.demo.iplay.widget.TipsLayout
        android:id="@+id/tips_layout"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />


</LinearLayout>
