<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.kugou.demo.iplay.widget.MainTabViewPager
        android:id="@+id/viewpager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/transparent" />

    <RadioGroup
        android:id="@+id/rg_home_tab"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="#000000"
        android:minHeight="50dip"
        android:orientation="horizontal">

        <RadioButton
            android:id="@+id/rb_tab_game"
            style="@style/Widget.RadioButton.Tab"
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:checked="true"
            android:drawablePadding="1dp"
            android:drawableTop="@drawable/selector_tab_game"
            android:gravity="center_horizontal|bottom"
            android:paddingBottom="6dip"
            android:paddingTop="6dip"
            android:text="游戏" />

        <RadioButton
            android:id="@+id/rb_tab_welfare"
            style="@style/Widget.RadioButton.Tab"
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:drawablePadding="1dp"
            android:drawableTop="@drawable/selector_tab_welfare"
            android:gravity="center_horizontal|bottom"
            android:paddingBottom="6dip"
            android:paddingTop="6dip"
            android:text="福利" />
    </RadioGroup>
</RelativeLayout>
