<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <!-- viewpagerIndicator的风格样式 -->
    <style name="StyledIndicators">
        <item name="game_vpiTabPageIndicatorStyle">@style/CustomTabPageIndicator</item>
        <item name="game_vpiUnderlinePageIndicatorStyle">@style/CustomUnderlinePageIndicator</item>
        <item name="game_vpiTabTextCountStyle">@style/CustomTabTextCountStyle</item>
    </style>

    <style name="CustomTabPageIndicator">
        <item name="android:background">#FFFFFFFF</item>
        <item name="android:textAppearance">@style/CustomTabPageIndicator.Text</item>
        <item name="android:textColor">#ff00ff</item>
        <item name="android:textSize">16dp</item>
        <item name="android:divider">#000000</item>
        <item name="android:paddingTop">4dp</item>
        <item name="android:paddingBottom">4dp</item>
        <item name="android:paddingLeft">8dp</item>
        <item name="android:paddingRight">4dp</item>
        <item name="android:fadingEdge">horizontal</item>
        <item name="android:fadingEdgeLength">8dp</item>
        <item name="android:gravity">center</item>
        <item name="android:maxLines">1</item>
    </style>

    <style name="CustomUnderlinePageIndicator">
        <item name="game_selectedColor">#000000</item>
        <item name="android:background">#dddddd</item>
        <item name="game_fadeLength">1000</item>
        <item name="game_fadeDelay">1000</item>
    </style>

    <style name="CustomTabTextCountStyle">
        <item name="android:textAppearance">@style/CustomTabPageIndicator.Text</item>
        <item name="android:textColor">#ffffff</item>
        <item name="android:textSize">10dp</item>
        <item name="android:gravity">center</item>
        <item name="android:minHeight">15dp</item>
        <item name="android:minWidth">15dp</item>
        <item name="android:padding">0dp</item>
        <item name="android:background">#ff0000</item>
    </style>

    <style name="CustomTabPageIndicator.Text" parent="android:TextAppearance.Medium">
        <item name="android:typeface">monospace</item>
    </style>

    <style name="Widget.RadioButton.Tab" parent="@android:style/Widget.Button">
        <item name="android:textSize">12dp</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:button">@null</item>
        <item name="android:textColor">@color/selector_tab_text_color</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:singleLine">true</item>
        <item name="android:background">#00000000</item>
    </style>

</resources>
